# Production environment для Railway
ENVIRONMENT=production
DEBUG=false

# Секретный ключ для JWT (ОБЯЗАТЕЛЬНО ИЗМЕНИТЬ)
SECRET_KEY=your-super-secret-key-change-me-in-production-12345

# PostgreSQL база данных (Railway автоматически установит)
# Railway автоматически добавит эту переменную:
# DATABASE_URL=postgresql://postgres:password@postgres:5432/railway

# ScraperAPI ключ (ОБЯЗАТЕЛЬНО НАСТРОИТЬ)
SCRAPERAPI_KEY=your-scraperapi-key-here

# Telegram Bot (опционально)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://your-backend-url.railway.app/api/v1/telegram/webhook

# Stripe платежи (опционально)
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Email (опционально)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Sentry мониторинг (опционально)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Воркер настройки
SCRAPER_WORKER_INTERVAL_HOURS=6
SCRAPER_WORKER_MAX_PAGES=10

# Railway автоматически добавит эти переменные:
# PORT=8000
# RAILWAY_ENVIRONMENT=production
# RAILWAY_PROJECT_ID=...
# RAILWAY_SERVICE_ID=... 